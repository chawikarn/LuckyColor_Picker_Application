<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:text="Selet Picture |" />

    <RadioGroup
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/Picture"

            android:layout_width="150dp"
            android:layout_height="150dp"

            android:src="@drawable/shape"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    <RadioGroup
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnChoose"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:text="Gallery" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_dslr_camera"
            android:text="" />

    </RadioGroup>
    </RadioGroup>
    <RadioGroup
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="Type |" />

        <Spinner
            android:id="@+id/wardrobe_array"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"

            android:entries="@array/wardrobe_array" />

        <ImageView

            android:id="@+id/clover"
            android:layout_width="10dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="color"
            android:src="@drawable/ic_clothes_hanger" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAdd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:background="@drawable/ic_circle"
        android:shadowColor="@color/teal_200"
        android:text="Add" />


</LinearLayout>